<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_constarintlayout_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/dialog_tx_rankTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_tx_scoreTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:fontFamily="@font/samliphopangche_outline"
            android:background="@color/title"
            android:text="Rank"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dialog_tx_scoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/dialog_tx_rankTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:fontFamily="@font/samliphopangche_outline"
            android:background="@color/title"
            android:text="Score"
            android:textSize="25sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_constarintlayout_1st"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_constarintlayout_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/dialog_img_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/img_1st"/>

        <TextView
            android:id="@+id/dialog_tx_1st_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/samliphopangche_outline"
            app:layout_constraintLeft_toRightOf="@+id/dialog_img_1st"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/dialog_tx_1st_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E6E5E5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_constarintlayout_1st" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_constarintlayout_2st"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_constarintlayout_1st"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/dialog_img_2st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/img_2nd"/>

            <TextView
                android:id="@+id/dialog_tx_2st_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/samliphopangche_outline"
                app:layout_constraintLeft_toRightOf="@+id/dialog_img_2st"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/dialog_tx_2st_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E6E5E5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_constarintlayout_2st" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_constarintlayout_3st"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_constarintlayout_2st"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/dialog_img_3st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/img_3rd"/>

            <TextView
                android:id="@+id/dialog_tx_3st_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd"
                android:textSize="25sp"
                android:fontFamily="@font/samliphopangche_outline"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@+id/dialog_img_3st"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/dialog_tx_3st_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_constarintlayout_3st"
            android:text="확 인"
            android:fontFamily="@font/samliphopangche_outline"
            android:textSize="20sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>